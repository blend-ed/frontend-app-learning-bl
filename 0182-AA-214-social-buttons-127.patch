+        className="ml-2"
+        subject={intl.formatMessage(messages.emailSubject, { platform: getConfig().SITE_NAME, title })}
+        url={marketingUrl}
+      >
+        <EmailIcon round size={32} />
+        <span className="sr-only">{intl.formatMessage(messages.shareEmail)}</span>
